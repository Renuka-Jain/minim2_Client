<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:backgroundTint="#C6B6E1"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="401dp"
            android:layout_height="match_parent"
            android:background="#F1A029"
            android:orientation="horizontal"
            android:padding="6dp">

            <LinearLayout
                android:id="@+id/LinearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="2dp"
                android:orientation="vertical" />

            <TextView
                android:id="@+id/textRecyclerName"
                android:layout_width="233dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="24dp"
                android:layout_marginTop="6dp"
                android:text="name"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textRecyclerDATE"
                android:layout_width="234dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textRecyclerName"
                android:layout_alignParentStart="true"
                android:layout_marginStart="24dp"
                android:layout_marginTop="1dp"
                android:text="TextView"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textViewCount"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textRecyclerDATE"
                android:layout_alignParentStart="true"
                android:layout_marginStart="24dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="24dp"
                android:layout_toStartOf="@+id/button4"
                android:text="Price: "
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageViewRecycler"
                android:layout_width="89dp"
                android:layout_height="97dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@+id/textRecyclerDATE"
                tools:srcCompat="@tools:sample/avatars" />

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textRecyclerDATE"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="24dp"
                android:layout_toStartOf="@+id/imageViewRecycler"
                android:text="buy" />

        </RelativeLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>